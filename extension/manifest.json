{
  "manifest_version": 3,
  "name": "Social Authenticity Detector",
  "version": "1.0",
  "description": "Real-time fake content filter for social media",
  "permissions": ["activeTab", "storage"],
  "host_permissions": ["https://www.instagram.com/*", "https://x.com/*", "https://www.facebook.com/*", "http://localhost:8000/*"],
  "background": { "service_worker": "background.js" },
  "content_scripts": [{
    "matches": ["https://www.instagram.com/*", "https://x.com/*", "https://www.facebook.com/*"],
    "js": ["content.js"],
    "css": ["styles.css"],
    "run_at": "document_idle"
  }],
  "action": { "default_popup": "popup.html" }
}
